{
  "name": "@configu/cli",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "description": "Configu CLI",
  "author": "@configu/dev",
  "homepage": "https://configu.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/configu/configu",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/configu/configu/issues",
    "email": "dev@configu.com"
  },
  "keywords": [
    "cfgu",
    "configu",
    "configu-cli",
    "configu-command-line"
  ],
  "type": "module",
  "bin": {
    "configu": "./dist/configu.cjs"
  },
  "exports": {
    "./package.json": "./package.json"
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "tsup",
    "build:binary": "tsx build.mts",
    "build:docker": "docker build --build-arg NODE_VERSION=22.12.0 --progress plain -t configu/cli -f ./Dockerfile ../..",
    "dev": "tsx src/configu.ts",
    "start": "node dist/configu.cjs",
    "configu": "$HOME/.configu/bin/configu"
  },
  "dependencies": {
    "@configu/common": "workspace:*",
    "@configu/formatters": "workspace:*",
    "@configu/sdk": "workspace:*",
    "clipanion": "^4.0.0-rc.4",
    "get-stdin": "^9.0.0",
    "open": "10.1.0",
    "openid-client": "5.7.1",
    "table": "6.9.0",
    "typanion": "3.14.0",
    "giget": "1.2.3"
  },
  "devDependencies": {}
}
