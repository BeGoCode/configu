{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/configu/configu/main/packages/schema/.cfgu.json",
  "$comment": "https://jsonschema.dev/s/sZY8z",
  "title": "JSON Schema for Configu .cfgu files",
  "description": "https://docs.configu.com/interfaces/.cfgu",
  "type": "object",
  "required": [],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "minLength": 1,
      "description": "Url to JSON Schema",
      "default": "https://raw.githubusercontent.com/configu/configu/main/packages/schema/.cfgu.json",
      "nullable": true
    },
    "keys": {
      "type": "object",
      "required": [],
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": [],
        "additionalProperties": false,
        "properties": {
          "description": {
            "type": "string",
            "minLength": 1,
            "nullable": true
          },
          "label": {
            "type": ["string", "array"],
            "anyOf": [
              {
                "type": "string",
                "minLength": 1,
                "nullable": true
              },
              {
                "type": "array",
                "minItems": 1,
                "uniqueItems": true,
                "items": {
                  "type": "string",
                  "minLength": 1
                },
                "nullable": true
              }
            ],
            "nullable": true
          },
          "hidden": {
            "type": "boolean",
            "nullable": true
          },
          "lazy": {
            "type": "boolean",
            "nullable": true
          },
          "const": {
            "type": "string",
            "minLength": 1,
            "nullable": true
          },
          "default": {
            "type": "string",
            "minLength": 1,
            "nullable": true
          },
          "required": {
            "type": "boolean",
            "nullable": true
          },
          "enum": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "type": "string",
              "minLength": 1
            },
            "nullable": true
          },
          "pattern": {
            "type": "string",
            "minLength": 1,
            "nullable": true
          },
          "schema": {
            "type": "object",
            "minProperties": 1,
            "nullable": true
          },
          "test": {
            "type": ["string", "array"],
            "anyOf": [
              {
                "type": "string",
                "minLength": 1,
                "nullable": true
              },
              {
                "type": "array",
                "minItems": 1,
                "uniqueItems": true,
                "items": {
                  "type": "string",
                  "minLength": 1
                },
                "nullable": true
              }
            ],
            "nullable": true
          }
        },
        "allOf": [
          {
            "if": {
              "required": ["lazy"]
            },
            "then": {
              "properties": {
                "const": false,
                "default": false
              }
            }
          },
          {
            "if": {
              "required": ["const"]
            },
            "then": {
              "properties": {
                "lazy": false,
                "default": false,
                "required": false
              }
            }
          },
          {
            "if": {
              "required": ["default"]
            },
            "then": {
              "properties": {
                "lazy": false,
                "const": false,
                "required": false
              }
            }
          },
          {
            "if": {
              "required": ["required"]
            },
            "then": {
              "properties": {
                "const": false,
                "default": false
              }
            }
          }
        ]
      }
    }
  }
}
