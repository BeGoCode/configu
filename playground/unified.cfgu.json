{
  "UI_CONFIGURATION": {
    "type": "JSONSchema",
    "schema": {
      "type": "object",
      "properties": {
        "tenantId": { "type": "string" },
        "isActive": { "type": "boolean" },
        "appearance": {
          "type": "object",
          "properties": {
            "cta": { "type": "string" },
            "isRtl": { "type": "boolean" },
            "inputCta": { "type": "string" },
            "submitBtn": { "type": "string" },
            "strict": { "type": "boolean" },
            "loading": { "type": "string" },
            "successMessage": { "type": "string" }
          },
          "required": ["cta", "isRtl", "inputCta", "submitBtn", "strict", "loading", "successMessage"]
        },
        "isTransparent": { "type": "boolean" },
        "isCSIntegrated": { "type": "boolean" },
        "isTokenMasked": { "type": "boolean" },
        "isNetworkBodyDisabled": { "type": "boolean" },
        "chat": { "type": "boolean" },
        "openChatDefaultList": {
          "type": "array",
          "items": { "type": "string" }
        },
        "whiteListUrls": {
          "type": "array",
          "items": { "type": "string" }
        },
        "proactiveListUrls": {
          "type": "array",
          "items": { "type": "string" }
        },
        "proactiveTime": { "type": "number" },
        "network": { "type": "boolean" },
        "console": { "type": "boolean" },
        "events": { "type": "boolean" },
        "pageViews": { "type": "boolean" },
        "recordings": { "type": "boolean" },
        "inject": { "type": "boolean" },
        "chatSettings": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "theme": {
              "type": "object",
              "properties": {
                "iconPrimary": { "type": "string" },
                "background": { "type": "string" },
                "lightBorder": { "type": "string" },
                "textPlaceholder": { "type": "string" },
                "borderDefault": { "type": "string" },
                "bgCard": { "type": "string" },
                "bgInverted": { "type": "string" },
                "textPrimary": { "type": "string" },
                "textInverted": { "type": "string" },
                "borderLight": { "type": "string" },
                "bgPrimaryQuack": { "type": "string" },
                "bgSendButton": { "type": "string" },
                "bgChatWidget": { "type": "string" },
                "bgInput": { "type": "string" },
                "agentBackground": { "type": "string" },
                "agentText": { "type": "string" },
                "userBackground": { "type": "string" },
                "userText": { "type": "string" }
              },
              "required": [
                "iconPrimary",
                "background",
                "lightBorder",
                "textPlaceholder",
                "borderDefault",
                "bgCard",
                "bgInverted",
                "textPrimary",
                "textInverted",
                "borderLight",
                "bgPrimaryQuack",
                "bgSendButton",
                "bgChatWidget",
                "bgInput",
                "agentBackground",
                "agentText",
                "userBackground",
                "userText"
              ]
            }
          },
          "required": ["name", "theme"]
        }
      },
      "required": [
        "tenantId",
        "isActive",
        "appearance",
        "isTransparent",
        "isCSIntegrated",
        "isTokenMasked",
        "isNetworkBodyDisabled",
        "chat",
        "openChatDefaultList",
        "whiteListUrls",
        "proactiveListUrls",
        "proactiveTime",
        "network",
        "console",
        "events",
        "pageViews",
        "recordings",
        "inject",
        "chatSettings"
      ]
    }
  }
}
