{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/configu/configu/main/packages/schema/.configu.json",
  "$comment": "https://jsonschema.dev/s/3pOmT",
  "title": "JSON Schema for Configu .configu file",
  "description": "https://docs.configu.com/interfaces/.configu",
  "type": "object",
  "required": [],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "minLength": 1,
      "description": "Url to JSON Schema",
      "default": "https://raw.githubusercontent.com/configu/configu/main/packages/schema/.configu.json",
      "nullable": true
    },
    "stores": {
      "type": "object",
      "required": [],
      "additionalProperties": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": {
            "type": "string"
          },
          "configuration": {
            "type": "object",
            "nullable": true
          },
          "backup": {
            "type": "boolean",
            "nullable": true
          }
        }
      },
      "nullable": true
    },
    "backup": {
      "type": "string",
      "minLength": 1,
      "nullable": true
    },
    "schemas": {
      "type": "object",
      "required": [],
      "additionalProperties": {
        "type": "string"
      },
      "nullable": true
    },
    "scripts": {
      "type": "object",
      "required": [],
      "additionalProperties": {
        "type": "string"
      },
      "nullable": true
    }
  }
}
